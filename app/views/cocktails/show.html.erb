<div class='container'>
 <h3> <%= @cocktail.name %></h3>
 <ul>
   <% @cocktail.doses.each do |dose| %>
   <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
    </li>
    <%= link_to 'Delete Ingredient', dose_path(dose), method: :delete %>
    <% end %>
  </ul>
 <div><%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail) %></div>
<%= link_to 'Back Home', cocktails_path %>
</div>
