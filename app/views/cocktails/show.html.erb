<div class='container'>
 <h2> <%= @cocktail.name %></h2>
  <div class='row'>
    <div class='col-12 col-md-9'>
      <h3>Recipe</h3>
      <table class='table'>
        <tbody>
          <thead>
            <th> Ingredient</th>
            <th> Description </th>
            <th> Delete </th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td> <%= dose.ingredient.name %> </td>
              <td> <%= dose.description %> </td>
              <td>
                <%= link_to 'Delete Ingredient', dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %>
              </td>

            </tr>
        </tbody>
      <% end %>
      </table>

     </div>
     <div class='col-12 col-md-3'>
     <%= render 'doses/new' %>
     </div>
  </div>
</div>
